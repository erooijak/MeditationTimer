<Page
    x:Class="Rooijakkers.MeditationTimer.MeditationDiaryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding MeditationDiary, Source={StaticResource Locator}}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="64,53,0,0" 
            TextWrapping="Wrap" 
            Text="Start time" 
            VerticalAlignment="Top" 
            FontSize="16" 
            Width="99"/>
        <TextBlock 
            HorizontalAlignment="Right" 
            Margin="0,53,25,0" 
            TextWrapping="Wrap" 
            Text="Time meditated" 
            VerticalAlignment="Top" 
            FontSize="16" 
            Width="161" Foreground="White"/>
        <ListBox Name="MeditationDiaryListBox" Margin="8,77,0,93" Foreground="White" Background="#FF311FE0">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" 
                        Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding StartTime}" 
                                   Grid.Column="0" 
                                   HorizontalAlignment="Left" 
                                   FontSize="16"/>
                        <TextBlock Text="{Binding TimeMeditated}" 
                                   Grid.Column="1" 
                                   HorizontalAlignment="Center" 
                                   FontSize="16"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button 
        	Content="Go back" 
        	HorizontalAlignment="Right" 
        	Margin="0,0,25,40" 
        	VerticalAlignment="Bottom"
            Click="GoToMainScreenButton_Click"
        	Background="Transparent" 
        	FontSize="16" 
        	FontWeight="Normal" 
        	Width="120" 
        	Height="23" />
    </Grid>
</Page>
